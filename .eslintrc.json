{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es6.json"],
  "env": {"node": true},
  "overrides": [
    {
      "files": ["*.md"],
      "plugins": ["markdown"],
      "globals": {"H": false, "Just": false, "Nothing": false, "S": false},
      "rules": {
        "max-len": ["off"],
        "strict": ["off"]
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "func-call-spacing": ["off"],
        "indent": ["off"],
        "max-len": ["error", {"code": 79, "ignoreUrls": true, "ignorePattern": "^//(# |[.] [>'])"}],
        "no-unexpected-multiline": ["off"]
      }
    }
  ]
}
